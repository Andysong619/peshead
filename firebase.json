{
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "config/storage.rules"
  },
  "functions": {
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "**/test/**",
      "/design/**",
      "firebase.json",
      "/functions/@types/**",
      "/functions/cli/**",
      "/functions/config/**",
      "/functions/service/**",
      "/public/**",
      "/src/**"
    ]
  }
}
