{
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      }
    ]
  },
  "storage": {
    "rules": "config/storage.rules"
  },
  "functions": {
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "**/test/**",
      "/build/**",
      "/functions/@types/**",
      "/functions/*.ts",
      "/functions/cli/**",
      "/functions/config/**",
      "/functions/shared/**",
      "/functions/test/**",
      "/functions/typesets/**",
      "/public/**",
      "/src/**",
      "firebase.json"
    ]
  }
}
